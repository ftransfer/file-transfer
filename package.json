{
  "private": true,
  "name": "my-nextron-app",
  "description": "My application description",
  "version": "1.0.0",
  "author": "Yoshihide Shiono <shiono.yoshihide@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "cd client && next build && cd .. && nextron build --win --x64",
    "postinstall": "electron-builder install-app-deps",
    "build-client": "cd client && next build && cd .. && copyfiles client/_client app",
    "cp": "node main/build-client.js",
    "asd": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "@hapi/hapi": "^20.1.0",
    "electron-serve": "^1.0.0",
    "electron-store": "^6.0.1",
    "electron-workers": "^1.10.3",
    "hapi-proxy-get": "^0.1.3",
    "next": "^10.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@material-ui/core": "^4.11.1",
    "copy-dir": "^1.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^11.0.2",
    "electron-builder": "^22.9.1",
    "nextron": "^6.0.1"
  },
  "build": {
    "appId": "com.setyatmoko.file-transfer",
    "productName": "File Transfer",
    "copyright": "@Setyatmoko",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json",
          "app"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "client",
        "to": "client"
      }
    ]
  }
}
